<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MoviesTT.Views.MovieDetails"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:common="clr-namespace:MoviesTT.Common"
    xmlns:controls="clr-namespace:MoviesTT.Controls"
    BackgroundColor="#35364B"
    NavigationPage.HasNavigationBar="False">

    <ContentPage.Content>
        <ScrollView Padding="0,0,0,30">
            <StackLayout>
                <!--  Poster movie  -->
                <Grid RowDefinitions="50,auto">


                    <Image
                        Grid.RowSpan="2"
                        Aspect="AspectFill"
                        HeightRequest="500">
                        <Image.Source>
                            <UriImageSource
                                CacheValidity="15"
                                CachingEnabled="True"
                                Uri="{Binding MovieD.poster_path}" />
                        </Image.Source>
                    </Image>
                    <Button
                        Padding="0"
                        BackgroundColor="#4035364B"
                        Command="{Binding GoBackCommand}"
                        HorizontalOptions="Start">
                        <Button.ImageSource>
                            <FontImageSource
                                FontFamily="FontIcons"
                                Glyph="{x:Static common:IconFont.ArrowLeft}"
                                Size="50"
                                Color="White" />
                        </Button.ImageSource>
                    </Button>
                </Grid>


                <!--  rating, title, watch, overview  -->
                <Grid
                    Padding="20,15"
                    ColumnDefinitions="*,*"
                    RowDefinitions="auto,40, auto">
                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        FontAttributes="Bold"
                        FontSize="Title"
                        Text="{Binding MovieD.title}"
                        TextColor="White" />

                    <Button
                        Grid.Row="0"
                        Grid.Column="1"
                        Padding="0"
                        BackgroundColor="Transparent"
                        HorizontalOptions="End">
                        <Button.ImageSource>
                            <FontImageSource
                                FontFamily="FontIcons"
                                Glyph="{x:Static common:IconFont.Monitor}"
                                Size="20"
                                Color="White" />
                        </Button.ImageSource>
                    </Button>

                    <Button
                        Grid.Row="1"
                        Grid.Column="0"
                        Padding="10,5"
                        CornerRadius="30"
                        HorizontalOptions="StartAndExpand"
                        Text="WHATCH NOW"
                        WidthRequest="150" />


                    <controls:RatingBarControl
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalOptions="EndAndExpand"
                        MovieScore="{Binding MovieD.vote_average}"
                        VerticalOptions="Center" />
                    <!--  overview  -->
                    <Label
                        Grid.Row="2"
                        Grid.ColumnSpan="2"
                        Margin="0,20,0,0"
                        FontSize="Medium"
                        Text="{Binding MovieD.overview}"
                        TextColor="White" />

                </Grid>

                <!--  Actors  -->
                <CollectionView
                    FlowDirection="LeftToRight"
                    HeightRequest="200"
                    ItemsLayout="HorizontalList"
                    ItemsSource="{Binding ObActorsCast}"
                    SelectionMode="None">
                    <CollectionView.EmptyView>
                        <StackLayout>
                            <Label
                                Margin="10,25,10,10"
                                FontAttributes="Bold"
                                FontSize="Title"
                                HorizontalTextAlignment="Center"
                                Text="No cast listed for this movie."
                                TextColor="White" />
                        </StackLayout>
                    </CollectionView.EmptyView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout>

                                <Grid
                                    Margin="10,0,10,0"
                                    RowDefinitions="auto, auto"
                                    RowSpacing="0">


                                    <Frame
                                        Padding="0"
                                        CornerRadius="200"
                                        HeightRequest="100"
                                        IsClippedToBounds="True"
                                        WidthRequest="100">
                                        <Image
                                            Aspect="AspectFill"
                                            HeightRequest="150"
                                            WidthRequest="150">
                                            <Image.Source>
                                                <UriImageSource
                                                    CacheValidity="15"
                                                    CachingEnabled="True"
                                                    Uri="{Binding profile_path}" />
                                            </Image.Source>
                                        </Image>
                                    </Frame>
                                    <Label
                                        Grid.Row="1"
                                        FontSize="Large"
                                        HorizontalOptions="Center"
                                        LineBreakMode="TailTruncation"
                                        Text="{Binding name}"
                                        TextColor="White"
                                        WidthRequest="100" />
                                </Grid>
                            </StackLayout>

                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <!--  studio, gender, release  -->
                <Grid
                    Padding="20,15"
                    ColumnDefinitions="auto,*"
                    ColumnSpacing="10"
                    RowDefinitions="auto,auto,auto">
                    <!--  Studio  -->
                    <Label
                        Grid.Row="0"
                        Grid.Column="0"
                        FontAttributes="Bold"
                        FontSize="Large"
                        Text="Studio"
                        TextColor="White" />

                    <Label
                        Grid.Row="0"
                        Grid.Column="1"
                        FontSize="Large"
                        Text="{Binding ProdCompany.name}"
                        TextColor="White" />
                    <!--  Genre  -->
                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        FontAttributes="Bold"
                        FontSize="Title"
                        Text="Genre"
                        TextColor="White" />

                    <Label
                        Grid.Row="1"
                        Grid.Column="1"
                        FontSize="Large"
                        Text="{Binding GenrList}"
                        TextColor="White" />
                    <!--  Release  -->
                    <Label
                        Grid.Row="2"
                        Grid.Column="0"
                        FontAttributes="Bold"
                        FontSize="Large"
                        Text="Release"
                        TextColor="White" />

                    <Label
                        Grid.Row="2"
                        Grid.Column="1"
                        FontSize="Large"
                        Text="{Binding MovieD.release_date}"
                        TextColor="White" />
                </Grid>
            </StackLayout>

        </ScrollView>
    </ContentPage.Content>
</ContentPage>