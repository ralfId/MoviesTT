<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MoviesTT.Views.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#60A8D8">
    <ContentPage.Content>
        <ScrollView>
            <Grid RowDefinitions="180, auto">

                <StackLayout Grid.Row="0" Padding="30,40,30,0">
                    <Grid RowDefinitions="*,40">
                        <Label
                            Grid.Row="0"
                            FontSize="Title"
                            HorizontalTextAlignment="Center"
                            Text="Hello, what do you want to wath?"
                            TextColor="White" />
                       
                        <SearchBar Grid.Row="1" BackgroundColor="#90C0D8" />
                    </Grid>

                </StackLayout>

                <Grid
                    Grid.Row="1"
                    BackgroundColor="Black"
                    RowDefinitions="auto,auto,auto">
                    <!--<Path Aspect="Uniform"

                          Data="M 137.14258 42.519531 C 110.23401 42.519531 88.572266 64.183225 88.572266 91.091797 L 88.572266 262.51953 L 88.572266 1056.8047 L 88.572266 1102.5195 C 88.572266 1104.1024 89.844897 1105.377 91.427734 1105.377 L 137.14258 1105.377 L 691.42773 1105.377 L 737.14258 1105.377 C 738.72542 1105.377 740 1104.1024 740 1102.5195 L 740 1056.8047 L 740 262.51953 L 740 91.091797 C 740 64.183225 718.33631 42.519531 691.42773 42.519531 L 137.14258 42.519531 z " Fill="black"/>-->
                    <Grid Grid.Row="0">
                        <!--  RECOMMENDED FOR YOU  -->
                        <Grid
                            Margin="5"
                            BackgroundColor="Gray"
                            RowDefinitions="auto, auto">
                            <Label
                                Grid.Row="0"
                                Text="RECOMMENDED FOR YOU"
                                TextColor="White" />
                            <CollectionView Grid.Row="1" ItemsSource="{Binding ObPupularCatg}" FlowDirection="LeftToRight" ItemsLayout="HorizontalList" >
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <StackLayout >
                                           
                                            <Grid RowDefinitions="auto, auto, auto" RowSpacing="0" BackgroundColor="White" Margin="10">

                                                <Image Aspect="AspectFit" HeightRequest="130">
                                                    <Image.Source>
                                                        <UriImageSource
                                                            CacheValidity="15"
                                                            CachingEnabled="True"
                                                            Uri="{Binding poster_path}" />
                                                    </Image.Source>
                                                </Image>
                                                <Label Grid.Row="1" HorizontalOptions="StartAndExpand" Text="{Binding title}" TextType="Text" LineBreakMode="TailTruncation"/>
                                                <Label Grid.Row="2" HorizontalOptions="End" Text="{Binding vote_average}" />
                                            </Grid>
                                        </StackLayout>
                                        
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>

                        </Grid>




                    </Grid>


                </Grid>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>